<?xml version='1.0' encoding='utf-8'?>
<widget id="com.orsum.scolae" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <feature name="Camera">
        <param name="firefoxos-package" value="Camera" />
    </feature>
    <permission access="readwrite" description="Required for accessing address book." name="contacts" privileged="true" />
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <feature name="Accelerometer">
        <param name="firefoxos-package" value="Accelerometer" />
    </feature>
    <feature name="Compass">
        <param name="firefoxos-package" value="Compass" />
    </feature>
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
    <permission name="systemXHR" privileged="true" />
    <permission description="Required for accessing user location." name="geolocation" />
    <permission description="Enables the app to implement a browser in an iframe." name="browser" privileged="true" />
    <name>Stundenplan</name>
    <description>
        A Stundenplan-App.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Philipp Fehr und Lukas Bischof
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
